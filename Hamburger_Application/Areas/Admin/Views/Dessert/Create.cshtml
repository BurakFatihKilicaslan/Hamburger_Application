@model DessertCreateVM

<style>
	.btn.btn-outline-success:hover {
		background-color: darkolivegreen !important;
	}

	.btn.btn-outline-secondary.btn-block:hover {
		background-color: red !important;
	}
</style>

@if (ViewBag.Info is not null)
{
<h3 class="text-center text-danger" style="text-align: center; font-family: Aclonica serif;">@ViewBag.Info</h3>
}
<h3 class="text-center text-danger" style="text-align: center; font-family: Aclonica serif;">Dessert Create</h3>


<form asp-action="Create" method="post" enctype="multipart/form-data">
	<div asp-validation-summary="All" class="text-danger"></div>
	<div class="form-group">
		<label asp-for="Name" class="control-label">Dessert Name</label>
		<input asp-for="Name" class="form-control" type="text" />
		<span asp-validation-for="Name" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Piece" class="control-label"></label>
		<input asp-for="Piece" class="form-control" type="number" />
	</div>
	<div class="form-group">
		<label asp-for="Price" class="control-label"></label>
		<input asp-for="Price" class="form-control" type="number" />
	</div>
	<div class="form-group">
		<label class="control-label">Photo</label>
		<input class="form-control" type="file" name="imgCover" accept=".png,.jpeg,.jpg" />
	</div>
	<br />
	<div class="text-center">
		<button type="submit" class="btn btn-outline-success">Save</button>
		<a asp-action="DessertList" asp-controller="Dessert" class="btn btn-outline-secondary btn-block">Cancel</a>
	</div>
</form>

@section Scripts{
	<script src="~/js/bootstrap.min.js"></script>
	<partial name="_ValidationScriptsPartial" />
}