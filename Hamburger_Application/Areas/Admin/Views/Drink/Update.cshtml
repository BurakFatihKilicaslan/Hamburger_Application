@model DrinkUpdateVM
<style>
    .btn.btn-outline-warning:hover {
        background-color: darkorange !important;
    }

    .btn.btn-outline-success:hover {
        background-color: darkolivegreen !important;
    }

    .table-hover tbody tr:hover {
        background-color: rgb(244, 147, 1);
    }

    .btn.btn-outline-secondary.btn-block:hover {
        background-color: red !important;
    }
</style>
<table class="table table-hover table-bordered  ">
    <thead>
        <tr>
            <th style="background-color: rgb(244, 147, 1); color:rgb(247,244,244); font-family: Aclonica; serif;font-size: 15px">Photo</th>
            <th style="background-color: rgb(244, 147, 1); color:rgb(247,244,244); font-family: Aclonica; serif;font-size: 15px">Name</th>
            <th style="background-color: rgb(244, 147, 1); color:rgb(247,244,244); font-family: Aclonica; serif;font-size: 15px">Piece</th>
            <th style="background-color: rgb(244, 147, 1); color:rgb(247,244,244); font-family: Aclonica; serif;font-size: 15px">Size</th>
            <th style="background-color: rgb(244, 147, 1); color:rgb(247,244,244); font-family: Aclonica; serif;font-size: 15px">Price</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td class="text-center">
                <img src="/ProductsImages/Drink/@Model.Photo" width="90" height="140">
            </td>
            <td>
                <div class="text-container">
                    @Model.Name
                </div>
            </td>
            <td>
                <div class="text-container">
                    @Model.Piece
                </div>
            </td>
            <td>
                <div class="text-container">
                    @Model.Size
                </div>
            </td>
            <td>
                <div class="text-container">
                    @Model.Price ₺
                </div>
            </td>
        </tr>
    </tbody>
</table>

<form asp-action="Update" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" type="text" />
        <span asp-validation-for="Name" style="color:darkred" />
    </div>
    <div class="form-group">
        <label asp-for="Piece" class="control-label"></label>
        <input asp-for="Piece" class="form-control" type="number" />
        <span asp-validation-for="Piece" style="color:darkred" />
    </div>
    <div class="form-group">
        <label asp-for="Size" class="control-label"></label>
        <select asp-for="Size" class="form-control" asp-items="ViewBag.size"></select>
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" type="number" />
        <span asp-validation-for="Price" style="color:darkred" />
    </div>

    <div class="form-group">
        <label asp-for="Photo" class="control-label"></label>
        <input asp-for="Photo" class="form-control" type="file" name="imgCover" />
        <span asp-validation-for="Photo" style="color:darkred" />
    </div>
    <div class="text-center">
        <input type="submit" value="Update" class="btn btn-outline-success">
        <a asp-action="DrinkList" asp-controller="Drink" class="btn btn-outline-secondary btn-block">Cancel</a>
    </div>

</form>
@if (ViewBag.info != null)
{
    <p>@ViewBag.info</p>
}

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
