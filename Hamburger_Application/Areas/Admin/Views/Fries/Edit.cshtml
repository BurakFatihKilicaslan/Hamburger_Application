@model UpdateFriesVM

<style>
    .btn.btn-outline-warning:hover {
        background-color: darkorange !important;
    }

    .btn.btn-outline-success:hover {
        background-color: darkolivegreen !important;
    }

    .table-hover tbody tr:hover {
        background-color: rgb(244, 147, 1);
    }

    .btn.btn-outline-secondary.btn-block:hover {
        background-color: red !important;
    }
</style>

<form method="post" asp-action="Edit" asp-controller="Fries" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div>
        <label>Fries Name</label>
        <input asp-for="Name" class="form-control" placeholder="Name" />
        <span asp-validation-for="Name" style="color:darkred" />
    </div>
    <div>
        <label>Piece</label>
        <input asp-for="Piece" class="form-control" />
        <span asp-validation-for="Piece" style="color:darkred" />
    </div>
    <div class="form-group">
        <label asp-for="Size" class="control-label"></label>
        <select asp-for="Size" class="form-control" asp-items="ViewBag.size"></select>
    </div>
    <div>
        <label>Price:</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" style="color:darkred" />
    </div>
    <div class="form-group">
        <label class="control-label">Photo</label>
        <input class="form-control" type="file" name="imgCover" accept=".jpg,.png,.jpeg" />
    </div>
    <div class="text-center">
        <input type="submit" value="Update" class="btn btn-outline-success">
        <a asp-action="List" asp-controller="Fries" class="btn btn-outline-secondary btn-block">Cancel</a>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
