@model CreateMenuVM

<style>
    .btn.btn-outline-warning:hover {
        background-color: darkorange !important;
    }

    .btn.btn-outline-success:hover {
        background-color: darkolivegreen !important;
    }

    .table-hover tbody tr:hover {
        background-color: rgb(244, 147, 1);
    }

    .btn.btn-outline-secondary.btn-block:hover {
        background-color: red !important;
    }
</style>
<table class="table table-hover table-bordered  ">
    <thead>
        <tr>
            <th style="background-color: rgb(244, 147, 1); color:rgb(247,244,244); font-family: Aclonica; serif;font-size: 15px">Photo</th>
            <th style="background-color: rgb(244, 147, 1); color:rgb(247,244,244); font-family: Aclonica; serif;font-size: 15px">Name</th>
            <th style="background-color: rgb(244, 147, 1); color:rgb(247,244,244); font-family: Aclonica; serif;font-size: 15px">Piece</th>
            <th style="background-color: rgb(244, 147, 1); color:rgb(247,244,244); font-family: Aclonica; serif;font-size: 15px">Price</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td class="text-center">
                <img src="/ProductsImages/Menu/@Model.Menu.Photo" width="90" height="140">
            </td>
            <td>
                <div class="text-container">
                    @Model.Menu.Name
                </div>
            </td>
            <td>
                <div class="text-container">
                    @Model.Menu.Piece
                </div>
            </td>
            <td>
                <div class="text-container">
                    @Model.Menu.Price ₺
                </div>
            </td>
        </tr>
    </tbody>
</table>

<form method="post" asp-action="Edit" asp-controller="Menu" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Menu.Id" />
    <div>
        <label>Name:</label>
        <input asp-for="Menu.Name" class="form-control" placeholder="Menu.Name" />
        <span asp-validation-for="Menu.Name" style="color:darkred" />
    </div>
    <div>
        <label>Piece</label>
        <input asp-for="Menu.Piece" class="form-control" placeholder="Menu.Piece" />
        <span asp-validation-for="Menu.Piece" style="color:darkred" />
    </div>
    <div>
        <label>Price:</label>
        <input asp-for="Menu.Price" class="form-control" placeholder="Menu.Price" />
        <span asp-validation-for="Menu.Price" style="color:darkred" />
    </div>
    <div class="form-group">
        <label asp-for="Menu.Photo" class="control-label"></label>
        <input asp-for="Menu.Photo" class="form-control" type="file" name="imageName" accept=".jpg,.png,.jpeg" placeholder="Menu.Photo" />
        <span asp-validation-for="Menu.Photo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Hamburger Name:</label>
        <select asp-for="Menu.HamburgerId" class="form-control" asp-items="Model.Hamburgers"></select>
    </div>
    <div class="form-group">
        <label>Fries Name:</label>
        <select asp-for="Menu.FriesId" class="form-control" asp-items="Model.Fries"></select>
    </div>
    <div class="form-group">
        <label>Drink Name:</label>
        <select asp-for="Menu.DrinkId" class="form-control" asp-items="Model.Drinks"></select>
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-outline-success">Save</button>
        <a asp-action="List" asp-controller="Menu" class="btn btn-outline-secondary btn-block">Cancel</a>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
