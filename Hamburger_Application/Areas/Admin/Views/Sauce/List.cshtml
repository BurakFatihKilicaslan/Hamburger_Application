@model IEnumerable<Sauce>

<style>
	.btn.btn-outline-warning:hover {
		background-color: darkorange !important;
	}

	.btn.btn-outline-danger:hover {
		background-color: red !important;
	}

	.btn.btn-outline-success:hover {
		background-color: darkolivegreen !important;
	}

	.table-hover tbody tr:hover {
		background-color: rgb(244, 147, 1);
	}

	.button-container {
		margin-right: 20px;
	}
</style>

<table class="table table-hover table-bordered  ">
	<thead>
		<tr>
			<th style="background-color: rgb(244, 147, 1); color:rgb(247,244,244); font-family: Aclonica; serif;font-size: 15px">Photo</th>
			<th style="background-color: rgb(244, 147, 1); color:rgb(247,244,244); font-family: Aclonica; serif;font-size: 15px">Name</th>
			<th style="background-color: rgb(244, 147, 1); color:rgb(247,244,244); font-family: Aclonica; serif;font-size: 15px">Piece</th>
			<th style="background-color: rgb(244, 147, 1); color:rgb(247,244,244); font-family: Aclonica; serif;font-size: 15px">Price</th>
			<th style="background-color: rgb(244, 147, 1); color:rgb(247,244,244); font-family: Aclonica; serif;font-size: 15px">Choose Your Transaction</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td class="text-center">
					<img src="/ProductsImages/Sauce/@item.Photo" width="90" height="140">
				</td>
				<td>
					<div class="text-container">
						@item.Name
					</div>
				</td>
				<td>
					<div class="text-container">
						@item.Piece
					</div>
				</td>
				<td>
					<div class="text-container">
						@item.Price ₺
					</div>
				</td>
				<td>
					<div class="d-flex">
						<a asp-action="Edit" asp-controller="Sauce" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-outline-warning button-container ">Update Sauce</a>
						<a asp-action="Delete" asp-controller="Sauce" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-outline-danger ">Delete Sauce</a>
					</div>
				</td>
			</tr>
		}
		<tr>
			<td colspan="7" class="text-center">
				<a asp-action="Create" asp-controller="Sauce" asp-area="Admin" class="btn btn-outline-success">Add Sauce</a>
			</td>
		</tr>
	</tbody>
</table>



