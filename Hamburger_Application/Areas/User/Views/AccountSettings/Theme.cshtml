
@{
    Layout = "~/Areas/User/Views/AccountLayout/Index.cshtml";
}

@model AppUserThemeVM

<h2 style="color:white">mbf hamburger theme</h2>
<br />
<br />
<hr />
<div style="color:white">
    <label>Do you want to use dark theme in mbf hamburger website?</label>
    <br />
    <form method="post" asp-area="User" asp-controller="AccountSettings" asp-action="Theme">
        <input asp-for="IsDark" type="checkbox" class="btn btn-outline-danger" value="Dark Theme" />
        <input type="hidden" asp-for="Email" />
        <input type="submit" class="btn btn-outline-warning" value="Save" />
    </form>
</div>

